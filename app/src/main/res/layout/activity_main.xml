<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow">

         </ImageView>
        <TextView
            android:layout_width="275dp"
            android:layout_height="65dp"
            android:paddingLeft="90sp"
            android:text="Gallery"
            android:textSize="40sp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/menu"
            android:paddingStart="45dp">

        </ImageView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/line_first"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_marginEnd="0dp"

            android:scaleType="fitXY"
            android:src="@drawable/image1">


        </ImageView>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_margin="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/image2">

        </ImageView>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            android:src="@drawable/image3">

        </ImageView>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            android:src="@drawable/image7"
          ></ImageView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/line_second"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"

            android:scaleType="fitXY"
            android:src="@drawable/image8">


        </ImageView>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/image5">

        </ImageView>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/image6">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:paddingTop="10sp"
            android:text="Yesterday"
            android:textSize="22sp"
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_fourth"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginEnd="0dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/image9">


        </ImageView>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/image11">

        </ImageView>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/image13">

        </ImageView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/line_sixth">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="12 photos, 15 videos"
            android:paddingTop="18dp"
            android:paddingBottom="1dp"
            android:paddingRight="100sp"
            android:paddingLeft="150sp"
            android:textSize="15sp"

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/line_six"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:src="@drawable/picture_symbol"
            android:layout_marginEnd="150dp"
            android:paddingBottom="1dp"
            android:layout_marginBottom="1dp">


        </ImageView>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginRight="140dp"
            android:src="@drawable/album">

        </ImageView>
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/explore">

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/line_seven"
        >

        <TextView
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:text="photos"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:text="albums"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="explore"
            android:textSize="15sp">

        </TextView>
    </LinearLayout>


</LinearLayout>